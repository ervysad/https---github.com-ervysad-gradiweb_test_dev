{% paginate blog.articles by 3 %}
  <div style="padding-top: 1rem;padding-bottom: 0.7rem;" class="row">
    <h1 class="blogtitle col-sm-12">{{ blog.title }}
    </h1>
  </div>

  <div class="row">
    <div class="col"></div>
    <div class="col-lg-6 col-sm-10">

      {% for article in blog.articles %}
        <div class="card">
          <div class="row no-gutters">
            <div class="col-sm-4">
              {% if article.image %}
                <img class="card-img-top" src="{{ article.image | img_url: 'medium' }}" alt="{{ article.image.alt }}" width=200 height=200 class="lazyload" loading="lazy">
              {% else %}
                {{ 'image'| placeholder_svg_tag }}
              {% endif %}
            </div>
            <div class="col-sm-7">
              <div class="card-body">
                <h5 class="card-title">{{ article.title }}
                </h5>
                <p class="card-text">{{ article.content | strip_html | truncatewords: 30 }}
                </p>
                <a href="{{ article.url }}" class="btn btn-dark">See more</a>
              </div>
            </div>
          </div>
        </div>


      {% endfor %}


    </div>
    <div class="col"></div>

  </div>

  <div class="pagination">
    {% render 'pagination', pagination: paginate %}
  </div>
{% endpaginate %} 